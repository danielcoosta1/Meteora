generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  categoria String
  src       String
  alt       String
  titulo    String
  descricao String
  preco     Float
  cores     String[]
  tamanhos  String[]
  material  String
  genero    String
}

model Carrinho {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @unique
  produtos     Json     // o array direto vindo do front
  atualizadoEm DateTime @updatedAt
}
