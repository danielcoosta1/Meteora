generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  categoria String
  src       String
  alt       String
  titulo    String
  descricao String
  preco     Float
  cores     String[]
  tamanhos  String[]
  material  String
  genero    String
}

model ProdutoNoCarrinho {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  produtoId  String // Referência ao produto original
  nome       String // Cópia do título
  preco      Float
  imagem     String
  quantidade Int
  carrinho   Carrinho @relation(fields: [carrinhoId], references: [id])
  carrinhoId String   @db.ObjectId
}

model Carrinho {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  userId       String              @unique
  produtos     ProdutoNoCarrinho[] // <--- relação com os produtos no carrinho
  atualizadoEm DateTime            @default(now())
}
